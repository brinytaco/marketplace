<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Case Collection Resource -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="dem_helpdesk_caseitem_listing_data_source" xsi:type="string">caseItemSearchResult</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="caseItemSearchResult" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">dem_helpdesk_case</argument>
            <argument name="resourceModel" xsi:type="string">Dem\HelpDesk\Model\ResourceModel\CaseItem</argument>
        </arguments>
    </virtualType>

    <!-- Dependency Injection requirements -->
    <virtualType name="caseItemModel" type="Dem\HelpDesk\Model\CaseItem">
        <arguments>
            <argument name="context" xsi:type="object">Magento\Framework\Model\Context</argument>
            <argument name="registry" xsi:type="object">Magento\Framework\Registry</argument>
            <argument name="department" xsi:type="object">Dem\HelpDesk\Model\Department</argument>
        </arguments>
    </virtualType>

    <virtualType name="gridFilterWebsite" type="Dem\HelpDesk\Block\Grid\Column\Filter\CaseItem\Website">
        <arguments>
            <argument name="helper" xsi:type="object" shared="true">Dem\HelpDesk\Helper\Data</argument>
            <argument name="store" xsi:type="object">Magento\Store\Model\System\Store</argument>
        </arguments>
    </virtualType>

</config>
